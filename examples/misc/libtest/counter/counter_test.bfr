open import "std.bfr"
open import "counter.bfr"

let main = [
  **gen_build @@ fun cnt -> $

  *gen_print cnt
  *gen_puts "\n"

  $build { a }
  + a 123
  *gen_repeat a [ *gen_incr cnt ]
  *gen_print cnt
  *gen_puts "\n"

  *gen_reset cnt
  *gen_print cnt
  *gen_puts "\n"

  $build { a }
  + a 4
  *gen_repeat a [ *gen_incr cnt ]
  *gen_print cnt
]