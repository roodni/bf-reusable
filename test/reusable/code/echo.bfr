// ! <- while
// ? <- if (non-destructive)
// * <- block expansion

let del = fun x -> [
  ! x [ - x ]
]

let if_eq = fun a -> fun b -> fun thn -> [
  ! a [
    - a
    ? b [ - b ] [
      *del a
      *thn
    ]
  ]
  ! b [
    *del b
    *thn
  ]
]


codegen $

$build { cont } in
+ cont
! cont [
  - cont
  $alloc { input; diff; } in
  , input
  . input
  + diff '#'
  *if_eq input diff [ + cont ]
]